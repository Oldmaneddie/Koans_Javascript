<div class="container-fluid text-center">
	<div class="row">
		<div class="col-md-12 col1">
			<i class="glyphicon glyphicon-facetime-video"></i>
			<h2>Movie Titles</h2>
		</div>
		<div class="col-md-12">
			<ul>
				<% @stories.each do |story| %>

				<li><%= link_to story.title , story_path(story.id) %></li> 
			 	<% end %>
			</ul>			
		</div>
	</div>

	<div class="row">
		<div class="col-md-12 panel panel-primary">
			<div class="panel-heading">Search for a Current Story</div>
				<div class="panel-body">

					<%= form_tag('/stories/search', :method => "get") do %> 
					  <%= label_tag(:title, "Search for:") %>
					  <%= text_field_tag(:title) %>
					  <div class="btn btn-default"> <!-- figure out what is going on with the button maybe formatting between the two are conflicting  -->
					  <%= submit_tag(value ="Search") %>
					  </div>
					<% end %>
				</div>
		</div>
	</div>

<div class="btn btn-default">
	<h3><%= link_to "Enter a new Story", new_story_path %></h3>
</div>




</div>